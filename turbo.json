{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"],
      "env": [
        "DATABASE_URL",
        "MYSQL_URL",
        "AUTH_GOOGLE_CLIENT_ID",
        "AUTH_GOOGLE_CLIENT_SECRET",
        "RESEND_API_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "DISABLE_UPSTASH_CACHE",
        "PORT",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY",
        "GOOGLE_SERVICES_JSON"
      ]
    },
    "start": {
      "cache": false,
      "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": false
    },
    "typegen": {
      "outputs": ["next-env.d.ts", ".next/types/**"]
    },
    "tsc": {
      "dependsOn": ["^topo", "typegen"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "//#check": {
      "cache": false
    },
    "//#check:write": {
      "cache": false
    },
    "//#check:unsafe": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^topo"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "push": {
      "cache": false,
      "interactive": true
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "seed": {
      "cache": false
    }
  },
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "NEXT_PUBLIC_VERCEL_PROJECT_PRODUCTION_URL",
    "npm_lifecycle_event"
  ]
}
