{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "root": true,
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": {
          "level": "on",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      },
      "style": {
        "useBlockStatements": "off",
        "noRestrictedImports": {
          "level": "on",
          "options": {
            "paths": {
              "zod": "Please import from 'zod/v4' instead"
            }
          }
        }
      },
      "complexity": {
        "noVoid": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ["react", "react/**", "react-native", "react-native/**"],
              ["next", "next/**"],
              ["expo", "expo/**"],

              ["**", "!@kdx/**", "!~/**", "!../**", "!./**"],

              ":BLANK_LINE:",

              ["@kdx/**", "~/**"],

              ":BLANK_LINE:",

              ["../**", "./**"]
            ]
          }
        }
      }
    }
  },
  "vcs": {
    "enabled": true,
    "useIgnoreFile": true,
    "clientKind": "git"
  }
}
