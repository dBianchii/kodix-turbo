{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboardApproval"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "/^@kdx//"
      ]
    }
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "replace",
  "automerge": false,
  "npm": {
    "managerFilePatterns": [
      "/(^|/)package\\.json$/",
      "/(^|/)package\\.json\\.hbs$/"
    ]
  }
}
