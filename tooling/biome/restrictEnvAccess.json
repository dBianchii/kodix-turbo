{
  "$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "rules": {
      "style": {
        "noRestrictedImports": {
          "level": "on",
          "options": {
            "paths": {
              "process": {
                "importNames": ["env"],
                "message": "Use `import { env } from '~/env'` instead to ensure validated types."
              }
            }
          }
        }
      }
    }
  }
}
