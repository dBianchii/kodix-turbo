{
  "extends": "@kodix/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "next-intl": ["src/shims/next-intl.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext",
    "strictNullChecks": true
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
