{
  "name": "kodix-turbo",
  "private": true,
  "engines": {
    "node": "22.15.0",
    "pnpm": "^9.14.2"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev:kdx": "turbo watch dev studio -F @kdx/app... @kdx/db-dev#dev",
    "dev:email": "turbo dev -F @kdx/react-email...",
    "db:push": "turbo @kdx/db-dev#dev @kdx/db#push",
    "db:seed": "turbo @kdx/db-dev#dev @kdx/db#seed",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "check:unsafe": "biome check --write --unsafe .",
    "lint:ws": "pnpm dlx sherif@latest",
    "start:trpc-cli": "pnpm -F trpc-cli start",
    "dev:trpc-cli": "pnpm -F trpc-cli dev",
    "vercel-link": "vercel switch kodix && vercel link --repo --yes && pnpm -r pull-vercel",
    "package-deps": "pnpm install",
    "postinstall": "pnpm lint:ws"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@turbo/gen": "catalog:turbo",
    "turbo": "catalog:turbo",
    "typescript": "catalog:",
    "ultracite": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "react": "catalog:react",
      "react-dom": "catalog:react"
    }
  }
}
