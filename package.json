{
  "name": "kodix-turbo",
  "private": true,
  "engines": {
    "node": "22.15.0"
  },
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev:kdx": "turbo watch dev studio -F @kdx/app... @kdx/db-dev#dev",
    "dev:cash": "turbo watch dev studio -F @cash/app... @cash/db-dev#dev",
    "dev:email": "turbo dev -F @kdx/react-email...",
    "push:kdx": "turbo @kdx/db-dev#dev @kdx/db#push",
    "push:cash": "turbo @cash/db-dev#dev @cash/db#push",
    "seed:kdx": "turbo @kdx/db-dev#dev @kdx/db#seed",
    "seed:cash": "turbo @cash/db-dev#dev @cash/db#seed",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "check:unsafe": "biome check --write --unsafe .",
    "start:trpc-cli": "pnpm -F trpc-cli start",
    "dev:trpc-cli": "pnpm -F trpc-cli dev",
    "vercel-link": "vercel switch kodix && vercel link --repo --yes && pnpm -r pull-vercel"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@turbo/gen": "catalog:turbo",
    "turbo": "catalog:turbo",
    "typescript": "catalog:",
    "ultracite": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "react": "catalog:react",
      "react-dom": "catalog:react"
    }
  }
}
