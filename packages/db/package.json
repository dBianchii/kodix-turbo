{
  "name": "@kdx/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./src/schema/index.ts"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "default": "./src/constants.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "pnpm with-env drizzle-kit push",
    "studio": "pnpm with-env drizzle-kit studio",
    "seed": "pnpm with-env tsx ./src/scripts/seed/index.ts",
    "drop": "pnpm with-env tsx ./src/scripts/drop.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@kdx/shared": "workspace:*",
    "@t3-oss/env-core": "^0.9.2",
    "drizzle-orm": "^0.31.2",
    "mysql2": "^3.9.2",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@kdx/eslint-config": "workspace:*",
    "@kdx/prettier-config": "workspace:*",
    "@kdx/tsconfig": "workspace:*",
    "@types/node": "^20.12.10",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.22.6",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "tsx": "4.7.3",
    "typescript": "^5.4.5"
  },
  "prettier": "@kdx/prettier-config"
}
