{
  "name": "@kdx/db",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "db:generate": "pnpm with-env prisma generate",
    "db:push": "pnpm with-env prisma db push --skip-generate",
    "db:seed": "pnpm dlx tsx ./seed/seed.ts",
    "dev": "pnpm with-env prisma studio --port 5556",
    "with-env": "dotenv -e ../../.env --",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@planetscale/database": "^1.11.0",
    "@prisma/adapter-planetscale": "^5.5.2",
    "@prisma/client": "^5.5.2"
  },
  "devDependencies": {
    "@kdx/eslint-config": "workspace:^0.2.0",
    "@kdx/prettier-config": "workspace:^0.1.0",
    "@kdx/tsconfig": "workspace:^0.1.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kdx/eslint-config/base"
    ]
  },
  "prettier": "@kdx/prettier-config"
}
