{
  "name": "@kdx/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "push": "pnpm with-env drizzle-kit push:mysql --config src/config.ts",
    "studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "seed": "pnpm with-env tsx ./src/seed/seed.ts",
    "nuke": "pnpm with-env tsx ./src/nuke.ts",
    "drop": "pnpx with-env tsx ./src/drop.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@kdx/shared": "workspace:*",
    "@t3-oss/env-core": "^0.9.2",
    "drizzle-orm": "^0.30.4",
    "mysql2": "^3.9.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@kdx/eslint-config": "workspace:*",
    "@kdx/prettier-config": "workspace:*",
    "@kdx/tsconfig": "workspace:*",
    "@types/node": "^20.11.30",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "4.7.1",
    "typescript": "^5.4.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kdx/eslint-config/base"
    ]
  },
  "prettier": "@kdx/prettier-config"
}
