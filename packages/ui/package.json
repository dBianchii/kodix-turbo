{
  "name": "@kdx/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "default": [
        "./src/*.ts",
        "./src/*.tsx"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn-ui add && prettier src --write --list-different"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@kdx/locales": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tanstack/react-table": "^8.16.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^0.2.1",
    "embla-carousel-react": "8.0.0-rc22",
    "framer-motion": "^11.2.6",
    "next": "catalog:",
    "next-themes": "^0.3.0",
    "react-day-picker": "^8.10.0",
    "react-hook-form": "^7.52.2",
    "react-resizable-panels": "^2.0.14",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@kdx/eslint-config": "workspace:*",
    "@kdx/prettier-config": "workspace:*",
    "@kdx/shared": "workspace:*",
    "@kdx/tsconfig": "workspace:*",
    "@types/react": "catalog:react18",
    "@types/react-dom": "catalog:react18",
    "cobe": "^0.6.3",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:react18",
    "react-spring": "^9.7.3",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:react18",
    "zod": "catalog:"
  },
  "prettier": "@kdx/prettier-config"
}
