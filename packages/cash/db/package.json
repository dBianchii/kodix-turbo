{
  "name": "@cash/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./repositories": "./src/repositories/index.ts",
    "./client": "./src/client.ts",
    "./schema": "./src/schema/index.ts",
    "./constants": "./src/constants.ts"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "push": "pnpm wait-for-db && DATABASE_URL=postgresql://postgres:local@localhost:5432/postgres pnpm drizzle-kit push",
    "studio": "pnpm wait-for-db && DATABASE_URL=postgresql://postgres:local@localhost:5432/postgres pnpm drizzle-kit studio",
    "seed": "pnpm wait-for-db && DATABASE_URL=postgresql://postgres:local@localhost:5432/postgres pnpm tsx ./scripts/seed.ts",
    "tsc": "tsc --noEmit",
    "wait-for-db": "while ! nc -z localhost 5432; do sleep 1; done"
  },
  "dependencies": {
    "@kodix/dayjs": "workspace:*",
    "@kodix/shared": "workspace:*",
    "@neondatabase/serverless": "^1.0.1",
    "@t3-oss/env-core": "catalog:",
    "drizzle-orm": "catalog:",
    "nanoid": "catalog:",
    "ws": "^8.18.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@kodix/biome-config": "workspace:*",
    "@kodix/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "catalog:",
    "drizzle-kit": "catalog:",
    "drizzle-seed": "catalog:",
    "ora": "catalog:",
    "postgres": "^3.4.7",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
