{
  "dependencies": {
    "@kodix/dayjs": "workspace:*",
    "@kodix/shared": "workspace:*",
    "@t3-oss/env-core": "0.9.2",
    "drizzle-orm": "0.44.5",
    "mysql2": "3.15.1",
    "nanoid": "5.1.6",
    "zod": "4.1.9"
  },
  "devDependencies": {
    "@kodix/tsconfig": "workspace:*",
    "@types/node": "22.15.0",
    "dotenv-cli": "7.4.4",
    "drizzle-kit": "0.31.5",
    "drizzle-seed": "0.3.1",
    "ora": "8.2.0",
    "tsx": "4.7.3",
    "typescript": "5.9.2"
  },
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts",
    "./constants": "./src/constants.ts",
    "./repositories": "./src/repositories/index.ts",
    "./schema": "./src/schema/index.ts",
    "./utils": "./src/utils.ts"
  },
  "name": "@kdx/db",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "push": "bun wait-for-db && MYSQL_URL='mysql://root:password@localhost:3306/kodix' bun drizzle-kit push",
    "seed": "bun wait-for-db && MYSQL_URL='mysql://root:password@localhost:3306/kodix' bun tsx ./scripts/seed.ts",
    "studio": "bun wait-for-db && MYSQL_URL='mysql://root:password@localhost:3306/kodix' bun drizzle-kit studio",
    "tsc": "tsc --noEmit",
    "wait-for-db": "while ! nc -z localhost 3306; do sleep 1; done"
  },
  "type": "module"
}
