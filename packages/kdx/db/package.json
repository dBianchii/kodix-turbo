{
  "name": "@kdx/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./repositories": "./src/repositories/index.ts",
    "./client": "./src/client.ts",
    "./schema": "./src/schema/index.ts",
    "./constants": "./src/constants.ts",
    "./utils": "./src/utils.ts"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "push": "pnpm wait-for-db && MYSQL_URL='mysql://root:password@localhost:3306/kodix' pnpm drizzle-kit push",
    "studio": "pnpm wait-for-db && MYSQL_URL='mysql://root:password@localhost:3306/kodix' pnpm drizzle-kit studio",
    "seed": "pnpm wait-for-db && MYSQL_URL='mysql://root:password@localhost:3306/kodix' pnpm tsx ./scripts/seed.ts",
    "tsc": "tsc --noEmit",
    "wait-for-db": "while ! nc -z localhost 3306; do sleep 1; done"
  },
  "dependencies": {
    "@kodix/dayjs": "workspace:*",
    "@kodix/shared": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "drizzle-orm": "catalog:",
    "mysql2": "catalog:",
    "nanoid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@kodix/biome-config": "workspace:*",
    "@kodix/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "dotenv-cli": "catalog:",
    "drizzle-kit": "catalog:",
    "drizzle-seed": "catalog:",
    "ora": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
