  "dependencies": {
    "@kdx/shared": "workspace:^0.1.0",
    "react-email": "^2.0.0"
  },
  "devDependencies": {
    "@kdx/eslint-config": "workspace:^0.2.0",
    "@kdx/prettier-config": "workspace:^0.1.0",
    "@kdx/tsconfig": "workspace:^0.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "@kdx/eslint-config/base",
      "@kdx/eslint-config/react"
    ]
  },
  "prettier": "@kdx/prettier-config"
}
