{
  "name": "@kdx/react-email",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./verification-request": "./src/emails/verification-request.tsx",
    "./team-invite": "./src/emails/team-invite.tsx"
