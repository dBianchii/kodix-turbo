{
  "name": "@kdx/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/api/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./crons/*": {
      "types": "./dist/api/src/crons/*.ts",
      "default": "./src/crons/*.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@kdx/auth": "workspace:*",
    "@kdx/dayjs": "workspace:*",
    "@kdx/db": "workspace:*",
    "@kdx/locales": "workspace:*",
    "@kdx/react-email": "workspace:*",
    "@kdx/shared": "workspace:*",
    "@kdx/validators": "workspace:*",
    "@node-rs/argon2": "^1.8.3",
    "@react-email/render": "0.0.13",
    "@trpc/server": "catalog:",
    "@upstash/qstash": "^2.7.12",
    "@upstash/redis": "^1.31.6",
    "deep-diff": "^1.0.2",
    "expo-server-sdk": "^3.11.0",
    "ms": "^2.1.3",
    "next": "^15.0.3",
    "next-intl": "^3.25.1",
    "object.groupby": "^1.0.3",
    "resend": "^4.0.1",
    "rrule": "^2.8.1",
    "superjson": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@kdx/eslint-config": "workspace:*",
    "@kdx/prettier-config": "workspace:*",
    "@kdx/tailwind-config": "workspace:*",
    "@kdx/tsconfig": "workspace:*",
    "@types/deep-diff": "^1.0.5",
    "@types/ms": "^0.7.34",
    "@types/node": "catalog:",
    "@types/object.groupby": "^1.0.4",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@kdx/prettier-config"
}
