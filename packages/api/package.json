  "dependencies": {
    "@kdx/auth": "workspace:*",
    "@kdx/dayjs": "workspace:*",
    "@kdx/db": "workspace:*",
    "@kdx/react-email": "workspace:*",
    "@kdx/shared": "workspace:*",
    "@kdx/validators": "workspace:*",
    "@kdx/locales": "workspace:*",
    "@trpc/server": "11.0.0-next.320",
    "dayjs": "^1.11.10",
    "next": "^14.1.4",
    "resend": "^3.2.0",
    "rrule": "^2.8.1",
    "superjson": "2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@kdx/eslint-config": "workspace:*",
    "@kdx/prettier-config": "workspace:*",
    "@kdx/tailwind-config": "workspace:*",
    "@kdx/tsconfig": "workspace:*",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.71",
    "@types/react-dom": "^18.2.22",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kdx/eslint-config/base"
    ]
  },
  "prettier": "@kdx/prettier-config"
